{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@agentic/shared": ["../../shared/src"],
      "@agentic/command-bus": ["../../command-bus/src"]
    }
  },
  "references": [
    { "path": "../../shared" },
    { "path": "../../command-bus" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
